<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_login"
        android:scaleType="fitXY"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:alpha="0.3"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_size"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/linearLayoutBookmark"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical">
        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutLoginInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingEnd="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingStart="40dp">

        <EditText
            android:id="@+id/forgetusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:hint="Enter LoginName"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:textColor="#d4d4d4"
            android:textColorHint="#d4d4d4"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/forgetemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/forgetusername"
            android:layout_alignLeft="@+id/forgetusername"
            android:layout_alignRight="@+id/forgetusername"
            android:layout_alignStart="@+id/forgetusername"

            android:layout_below="@+id/forgetusername"
            android:drawableLeft="@drawable/unlocked"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:ems="10"
            android:hint="Enter Your Email"
            android:imeOptions="actionGo"
            android:textColor="#d4d4d4"
            android:textColorHint="#d4d4d4"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/forgetphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/forgetemail"
            android:layout_alignLeft="@+id/forgetemail"
            android:layout_alignRight="@+id/forgetemail"
            android:layout_alignStart="@+id/forgetemail"
            android:layout_below="@+id/forgetemail"
            android:drawableLeft="@drawable/unlocked"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:ems="10"
            android:hint="Enter Your Phone"
            android:imeOptions="actionGo"
            android:textColor="#d4d4d4"
            android:textColorHint="#d4d4d4"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Getpass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/forgetphone"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btnlogin_background"
            android:gravity="center"
            android:text="Lấy lại mật khẩu"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/Dislaypass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/Getpass"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#333"
            android:gravity="center"
            android:text="Password Here"
            android:textStyle="bold"
            android:textColor="@color/white" />



    </RelativeLayout>


    <!--REGISTER-->



</RelativeLayout>
